{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Product",
    "description": "A product from Acme's catalog",
    "type": "object",
    "properties": {

        "organisation": {
            "description": "An fundee or funder organisation",
            "properties": {
                "orgId": {
                    "title": "Organisation ID",
                    "description": "The unique identifier for the organisation",
                    "type": "string"
                },
                "name": {
                    "title": "Name",
                    "description": "The name of the organisation",
                    "type": "string",
                    "nameType": {
                        "type" : "string",
                        "enum": ["Registered", "Trading", "Internal Reference", "Other"]}
                }
            },
            "required": ["ordID"]
        }
    }
}